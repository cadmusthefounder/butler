{
  "name": "butler",
  "version": "1.0.0",
  "description": "Housekeeps everything in a repository.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "pre-commit": "lint-staged",
    "commit": "commit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cadmusthefounder/butler.git"
  },
  "author": "Charlton Lim <cadmusthefounder@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cadmusthefounder/butler/issues"
  },
  "homepage": "https://github.com/cadmusthefounder/butler#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/prompt-cli": "^13.1.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "jest --bail 3 --findRelatedTests --coverage"
    ]
  }
}
